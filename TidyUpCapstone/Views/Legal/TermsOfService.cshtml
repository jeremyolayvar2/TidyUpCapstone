@{
    ViewData["Title"] = "Terms of Service";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Header -->
            <div class="text-center mb-4">
                <h1 class="display-6 fw-bold text-primary">Terms of Service</h1>
                <p class="lead text-muted">Rules and guidelines for using the Tidy Up platform</p>
                <p class="small text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
            </div>

            <!-- Agreement -->
            <div class="alert alert-primary">
                <h5 class="alert-heading">Agreement to Terms</h5>
                <p class="mb-0">By creating an account and using Tidy Up, you agree to be bound by these Terms of Service. If you do not agree to these terms, please do not use our platform.</p>
            </div>

            <!-- Platform Overview -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Platform Overview</h4>
                </div>
                <div class="card-body">
                    <p>Tidy Up is a decluttering platform that rewards users with tokens for posting items they no longer need. Our mission is to promote sustainable practices and reduce waste through community-driven decluttering.</p>
                    <h6>Core Features:</h6>
                    <ul>
                        <li><strong>Item Posting:</strong> Share photos and descriptions of items you want to declutter</li>
                        <li><strong>Token Rewards:</strong> Earn tokens for participating in decluttering activities</li>
                        <li><strong>Community Interaction:</strong> Engage with other users through comments and ratings</li>
                        <li><strong>Gamification:</strong> Complete quests, maintain streaks, and earn achievements</li>
                    </ul>
                </div>
            </div>

            <!-- User Responsibilities -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">User Responsibilities</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Account Requirements</h6>
                            <ul>
                                <li>Must be 18 years or older</li>
                                <li>Provide accurate registration information</li>
                                <li>Maintain account security</li>
                                <li>Use only one account per person</li>
                                <li>Keep contact information updated</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Content Standards</h6>
                            <ul>
                                <li>Post only items you actually own</li>
                                <li>Provide honest, accurate descriptions</li>
                                <li>Use appropriate, clear photos</li>
                                <li>Respect community guidelines</li>
                                <li>Report inappropriate content</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Prohibited Activities -->
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Prohibited Activities</h4>
                </div>
                <div class="card-body">
                    <h6>You may not:</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-danger">Content Violations</h6>
                            <ul>
                                <li>Post illegal, stolen, or counterfeit items</li>
                                <li>Include inappropriate or offensive content</li>
                                <li>Share false or misleading information</li>
                                <li>Post items you don't actually own</li>
                                <li>Include personal information in posts</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-danger">Platform Abuse</h6>
                            <ul>
                                <li>Create multiple accounts</li>
                                <li>Attempt to manipulate the token system</li>
                                <li>Spam or harass other users</li>
                                <li>Use automated tools or bots</li>
                                <li>Attempt to hack or exploit the platform</li>
                            </ul>
                        </div>
                    </div>

                    <div class="alert alert-danger mt-3">
                        <h6><i class="bx bx-warning me-2"></i>Consequences</h6>
                        <p class="mb-0">Violation of these terms may result in token forfeiture, account suspension, or permanent ban from the platform.</p>
                    </div>
                </div>
            </div>

            <!-- Token System Terms -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Token System Terms</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Earning Tokens</h6>
                            <ul>
                                <li>Tokens are awarded for legitimate platform activities</li>
                                <li>Token amounts may vary based on quality and category</li>
                                <li>Bonus tokens require meeting specific criteria</li>
                                <li>We reserve the right to adjust token values</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Token Usage</h6>
                            <ul>
                                <li>Tokens have no real-world monetary value</li>
                                <li>Tokens cannot be exchanged for cash</li>
                                <li>Token features may change over time</li>
                                <li>Tokens may expire if account is inactive</li>
                            </ul>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <h6><i class="bx bx-info-circle me-2"></i>Important</h6>
                        <p class="mb-0">Tokens are a gamification feature to encourage decluttering. They are not a cryptocurrency, investment, or legal tender.</p>
                    </div>
                </div>
            </div>

            <!-- Content and Intellectual Property -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Content and Intellectual Property</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Your Content</h6>
                            <ul>
                                <li>You retain ownership of photos and descriptions you post</li>
                                <li>You grant us license to display your content on the platform</li>
                                <li>You are responsible for ensuring you have rights to post content</li>
                                <li>You may delete your content at any time</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Our Platform</h6>
                            <ul>
                                <li>Tidy Up platform and features are our intellectual property</li>
                                <li>You may not copy, modify, or redistribute our code</li>
                                <li>Our logos, trademarks, and branding are protected</li>
                                <li>We may use aggregated data for platform improvement</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Privacy and Data -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Privacy and Data</h4>
                </div>
                <div class="card-body">
                    <p>Your privacy is important to us. Our data practices are governed by our <a href="/Legal/PrivacyPolicy">Privacy Policy</a>, which is incorporated into these terms.</p>
                    <h6>Key Points:</h6>
                    <ul>
                        <li>We collect only necessary information for platform operation</li>
                        <li>We do not sell your personal information</li>
                        <li>You control your privacy settings</li>
                        <li>You can request data deletion at any time</li>
                    </ul>
                </div>
            </div>

            <!-- Platform Availability -->
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Platform Availability</h4>
                </div>
                <div class="card-body">
                    <h6>Service Availability:</h6>
                    <ul>
                        <li>We strive to maintain 99.9% uptime but cannot guarantee uninterrupted service</li>
                        <li>Scheduled maintenance will be announced in advance when possible</li>
                        <li>We may temporarily suspend service for updates or repairs</li>
                        <li>Force majeure events may affect platform availability</li>
                    </ul>

                    <h6>Platform Changes:</h6>
                    <ul>
                        <li>We may add, modify, or remove features at any time</li>
                        <li>Significant changes will be communicated to users</li>
                        <li>We reserve the right to discontinue the service with notice</li>
                        <li>Beta features may be unstable or removed without notice</li>
                    </ul>
                </div>
            </div>

            <!-- Disclaimers and Limitations -->
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Disclaimers and Limitations</h4>
                </div>
                <div class="card-body">
                    <h6>Platform Disclaimers:</h6>
                    <ul>
                        <li>Tidy Up is provided "as is" without warranties of any kind</li>
                        <li>We do not guarantee the accuracy of user-posted content</li>
                        <li>We are not responsible for interactions between users</li>
                        <li>We do not verify the ownership or condition of posted items</li>
                    </ul>

                    <h6>Limitation of Liability:</h6>
                    <ul>
                        <li>Our liability is limited to the maximum extent permitted by law</li>
                        <li>We are not liable for indirect, incidental, or consequential damages</li>
                        <li>Users are responsible for their own actions on the platform</li>
                        <li>We do not guarantee token values or availability</li>
                    </ul>

                    <div class="alert alert-dark">
                        <h6><i class="bx bx-info-circle me-2"></i>User Responsibility</h6>
                        <p class="mb-0">You use Tidy Up at your own risk and are responsible for complying with all applicable laws and regulations.</p>
                    </div>
                </div>
            </div>

            <!-- Termination -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Account Termination</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Termination by You</h6>
                            <ul>
                                <li>You may delete your account at any time</li>
                                <li>Account deletion removes all your data</li>
                                <li>Tokens are forfeited upon account deletion</li>
                                <li>Some data may be retained for legal compliance</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Termination by Us</h6>
                            <ul>
                                <li>We may suspend accounts for terms violations</li>
                                <li>Serious violations may result in permanent ban</li>
                                <li>We may terminate service with 30 days notice</li>
                                <li>Terminated users may not create new accounts</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Changes to Terms -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Changes to These Terms</h4>
                </div>
                <div class="card-body">
                    <p>We may update these Terms of Service to reflect changes in our platform or legal requirements:</p>
                    <ul>
                        <li>Material changes will be announced with 30 days notice</li>
                        <li>Minor changes will be reflected in the "Last updated" date</li>
                        <li>Continued use after changes constitutes acceptance</li>
                        <li>If you disagree with changes, you may terminate your account</li>
                    </ul>
                </div>
            </div>

            <!-- Governing Law -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Governing Law and Disputes</h4>
                </div>
                <div class="card-body">
                    <h6>Legal Framework:</h6>
                    <ul>
                        <li>These terms are governed by the laws of [Your Jurisdiction]</li>
                        <li>Disputes will be resolved through arbitration when possible</li>
                        <li>Users agree to resolve disputes individually, not as part of class actions</li>
                        <li>Courts of [Your Jurisdiction] have exclusive jurisdiction</li>
                    </ul>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card border-primary mb-4">
                <div class="card-header bg-primary bg-opacity-10">
                    <h5 class="mb-0 text-primary">
                        <i class="bx bx-envelope me-2"></i>
                        Questions About These Terms
                    </h5>
                </div>
                <div class="card-body">
                    <p>If you have questions about these Terms of Service, please contact us:</p>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bx bx-envelope me-2"></i>Email: legal@tidyup.com</li>
                                <li><i class="bx bx-message me-2"></i><a href="/Support/ContactUs">Contact Support Form</a></li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bx bx-help-circle me-2"></i><a href="/Support/HelpCenter">Help Center</a></li>
                                <li><i class="bx bx-shield me-2"></i><a href="/Legal/PrivacyPolicy">Privacy Policy</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <div class="d-flex justify-content-between align-items-center">
                <a href="/Home/SettingsPage" class="btn btn-outline-secondary">
                    <i class="bx bx-arrow-back me-2"></i>Back to Settings
                </a>
                <div>
                    <a href="/Legal/PrivacyPolicy" class="btn btn-outline-primary me-2">Privacy Policy</a>
                    <a href="/Legal/CookiePolicy" class="btn btn-outline-primary">Cookie Policy</a>
                </div>
            </div>
        </div>
    </div>
</div>