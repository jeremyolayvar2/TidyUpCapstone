@model TidyUpCapstone.Models.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Sign In - TidyUp";
    ViewBag.HideNavigation = true;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/account.css" />
    
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <!-- Header -->
            <div class="auth-header text-center mb-4">
                <h2>Welcome Back</h2>
                <p class="text-muted">Sign in to continue to <strong>TidyUp</strong></p>
            </div>

            <!-- Error Messages -->
            @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
            {
                <div class="alert alert-danger d-flex align-items-center">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @Model.ErrorMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger d-flex align-items-center">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @ViewBag.ErrorMessage
                </div>
            }

            <!-- OAuth Section -->
            <form method="post" action="/Account/ExternalLogin" class="mb-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="provider" value="Google" />
                <input type="hidden" name="returnUrl" value="@Model?.ReturnUrl" />
                <button type="submit" class="btn btn-google btn-lg w-100 mb-2">
                    <i class="fab fa-google me-2"></i>
                    Continue with Google
                </button>
            </form>
            <button class="btn btn-secondary btn-lg w-100 mb-3" disabled>
                <i class="fab fa-facebook-f me-2"></i>
                Facebook (Coming Soon)
            </button>

            <!-- Divider -->
            <div class="divider">
                <span>OR</span>
            </div>

            <!-- Manual Login -->
            <form method="post" action="/Account/ManualLogin">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@Model?.ReturnUrl" />

                <!-- Email -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input name="Email" type="email" class="form-control" placeholder="Enter your email" required />
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label class="form-label fw-bold">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input name="Password" type="password" class="form-control" placeholder="Enter your password" required />
                    </div>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="d-flex justify-content-between mb-3">
                    <div class="form-check">
                        <input name="RememberMe" class="form-check-input" type="checkbox" />
                        <label class="form-check-label">Remember me</label>
                    </div>
                    <a href="/Account/ForgotPassword" class="text-primary small fw-bold">Forgot Password?</a>
                </div>

                <!-- Sign In Button -->
                <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Sign In
                </button>
            </form>

            <!-- Footer -->
            <div class="footer-links text-center">
                <p class="mb-1">
                    Don't have an account?
                    <a href="/Account/Register" class="text-primary fw-bold">Create Account</a>
                </p>
                <p class="text-muted small">
                    By continuing, you agree to our
                    <a href="#" class="text-primary">Terms</a> &
                    <a href="#" class="text-primary">Privacy Policy</a>
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>