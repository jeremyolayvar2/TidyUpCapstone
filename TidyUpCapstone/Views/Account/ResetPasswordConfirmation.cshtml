@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5 text-center">

                    <!-- Success Animation -->
                    <div class="mb-4">
                        <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52" width="80" height="80">
                            <circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
                            <path class="checkmark__check" fill="none" d="M14 27l7 7 16-16" />
                        </svg>
                    </div>

                    <!-- Header -->
                    <h2 class="h3 mb-3 text-success fw-bold">Password Reset Successful!</h2>
                    <p class="text-muted">Your password has been successfully reset. You can now log in to your TidyUp account using your new password.</p>

                    <!-- Success Message -->
                    <div class="alert alert-success border-0 mb-4">
                        <h6><i class="fas fa-lock me-2"></i>Your Account is Secure</h6>
                        <small>Your new password has been encrypted and applied.</small>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 mb-4">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg fw-bold">
                            <i class="fas fa-sign-in-alt me-2"></i>Log In Now
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>Go to Homepage
                        </a>
                    </div>

                    <!-- Security Tips -->
                    <div class="mt-4 pt-3 border-top text-center">
                        <h6 class="text-muted mb-3">Security Tips</h6>
                        <div class="d-flex justify-content-center gap-4">
                            <div>
                                <i class="fas fa-user-lock text-primary mb-2" style="font-size: 1.5rem;"></i>
                                <p class="small text-muted mb-0">Keep it secure</p>
                            </div>
                            <div>
                                <i class="fas fa-eye-slash text-warning mb-2" style="font-size: 1.5rem;"></i>
                                <p class="small text-muted mb-0">Don't share</p>
                            </div>
                            <div>
                                <i class="fas fa-sync-alt text-info mb-2" style="font-size: 1.5rem;"></i>
                                <p class="small text-muted mb-0">Change regularly</p>
                            </div>
                        </div>
                    </div>

                    <!-- Help -->
                    <div class="mt-4 pt-3 border-top">
                        <p class="small text-muted mb-0">
                            Need help? Contact us at
                            <a href="mailto:support@tidyup.com" class="text-primary">support@tidyup.com</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

