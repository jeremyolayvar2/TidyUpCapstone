@{
    ViewData["Title"] = "Check Your Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/EmailVerificationSent.css?v=@DateTime.Now.Ticks" />
}

<div class="email-verification-sent-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="email-verification-sent-card">
        <div class="card-body p-5">

            <!-- Header Section -->
            <div class="text-center mb-4">
                <h1 class="email-verification-sent-header">Check Your Email!</h1>
                <p class="text-muted small mb-2">
                    We've sent a verification link to:
                </p>
                <p class="verification-email mb-4">@ViewBag.Email</p>
                <p class="text-muted small mb-0">
                    Click the verification link in your email to activate your account and start using TidyUp.
                </p>
            </div>

            <!-- Info Box -->
            <div class="info-box mb-4">
                <h6 class="info-title mb-2">
                    <i class="info-icon"></i>
                    What's Next?
                </h6>
                <ul class="info-list mb-0">
                    <li> Check your inbox (and spam folder)</li>
                    <li>Click the verification link</li>
                    <li>Return here to log in</li>
                </ul>
            </div>

            <!-- Buttons -->
            <div class="d-grid gap-3 mb-3">
                <a href="@Url.Action("ResendVerification", "Account", new { email = ViewBag.Email })"
                   class="btn-resend-verification">
                   
                    Resend Verification Email
                </a>

                <a href="@Url.Action("Index", "Home")"
                   class="btn-link">
                    Back to Login
                </a>
            </div>

            <!-- Footer -->
            <div class="footer-section mt-4 pt-3 border-top text-center small text-muted">
                <p class="mb-0">
                    <i class="clock-icon"></i>
                    Verification link expires in 24 hours
                </p>
            </div>
        </div>
    </div>
</div>