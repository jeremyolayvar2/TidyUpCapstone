@{
    ViewData["Title"] = "Email Verification Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/EmailConfirmationError.css" />
}

<div class="email-confirmation-error-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="email-confirmation-error-card">
        <div class="card-body p-5">

            <!-- Header Section -->
            <div class="text-center mb-4">
                <h1 class="email-confirmation-error-header">Verification Link Issue</h1>
                <p class="text-muted small mb-0">
                    We encountered a problem with your verification link.
                </p>
            </div>

            <!-- Error Message -->
            <div class="error-alert mb-4">
                <p class="mb-0 fw-semibold">@ViewBag.ErrorMessage</p>
            </div>

            <!-- Common Reasons -->
            <div class="reasons-section mb-4">
                <h6 class="reasons-title mb-3">Possible reasons:</h6>
                <ul class="reasons-list">
                    <li>
                        <i class="clock-icon"></i>
                        Verification link has expired (valid for 24 hours)
                    </li>
                    <li>
                        <i class="link-icon"></i>
                        Link was already used or is invalid
                    </li>
                    <li>
                        <i class="copy-icon"></i>
                        The link was copied incorrectly from your email
                    </li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-3 mb-3">
                <a href="@Url.Action("ResendVerification", "Account")" class="btn-resend-verification">
                    Request New Verification Email
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-link">Back to Login</a>
            </div>

            <!-- Help Section -->
            <div class="help-section mt-4 pt-3 border-top text-center">
                <p class="small text-muted mb-1">
                     Still having trouble?
                </p>
                <p class="small text-muted">
                    Contact our support team at
                    <a href="mailto:support@tidyup.com" class="text-primary fw-semibold">support@tidyup.com</a>
                </p>
            </div>

        </div>
    </div>
</div>