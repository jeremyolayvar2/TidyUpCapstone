@{
    ViewData["Title"] = "Email Verified Successfully";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/EmailConfirmed.css" />
}

<div class="email-confirmed-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="email-confirmed-card">
        <div class="card-body p-5">

            <!-- Header Section -->
            <div class="text-center mb-4">
                <h1 class="email-confirmed-header">Email Verified Successfully!</h1>
                <p class="text-muted small mb-2">Your email address has been verified:</p>
                <p class="verified-email mb-3">@ViewBag.Email</p>
                <p class="text-muted small mb-0">Your TidyUp account is now active and ready to use!</p>
            </div>

            <!-- Welcome Note -->
            <div class="welcome-alert mb-4">
                <h6 class="welcome-title mb-2">
                    Welcome to TidyUp!
                </h6>
                <p class="welcome-text mb-0">You can now log in and start organizing your life with ease.</p>
            </div>

            <!-- Action Buttons - FIXED -->
            <div class="d-grid gap-3 mb-3">
                <a href="@Url.Action("Index", "Home")" class="btn-login-account">
                    Log In to Your Account
                </a>
            </div>

            <!-- Next Steps -->
            <div class="next-steps mt-4 pt-3 border-top">
                <h6 class="next-steps-title mb-3">What's Next?</h6>
                <div class="steps-grid">
                    <div class="step-item">
                        <p class="step-text mb-0">Complete Profile</p>
                    </div>
                    <div class="step-item">
                        <p class="step-text mb-0">Add Items</p>
                    </div>
                    <div class="step-item">
                        <p class="step-text mb-0">Join Community</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>