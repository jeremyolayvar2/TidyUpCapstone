@model TidyUpCapstone.Models.DTOs.Authentication.RegisterDto
@{
    ViewData["Title"] = "Create Account - TidyUp";
    ViewBag.HideNavigation = true;
}


    <div class="auth-container">
        <div class="auth-card">
            <!-- Header -->
            <div class="auth-header text-center mb-4">
                <h2>Create Your Account</h2>
                <p class="text-muted small">Start decluttering with ease</p>
            </div>

            <!-- Quick Sign Up -->
            <form method="post" action="/Account/ExternalLogin" class="mb-3">
                @Html.AntiForgeryToken()
                <input type="hidden" name="provider" value="Google" />
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <button type="submit" class="btn btn-google btn-lg w-100 mb-3">
                    <i class="fab fa-google me-2"></i> Continue with Google
                </button>
            </form>

            <button class="btn btn-secondary btn-lg w-100 mb-3" disabled>
                <i class="fab fa-facebook-f me-2"></i> Facebook (Coming Soon)
            </button>

            <!-- Divider -->
            <div class="divider"><span>OR</span></div>

            <!-- Manual Registration -->
            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <!-- Email -->
                <div class="mb-3 input-group-position">
                    
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email Address" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Username -->
                <div class="mb-3 input-group-position">
                    
                    <input asp-for="Username" type="text" class="form-control" placeholder="Username" required />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <!-- Name Fields -->
                <div class="row">
                    <div class="col-6 mb-3 input-group-position">
                        
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" required />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-6 mb-3 input-group-position">
                       
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" required />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-3 input-group-position">
                    
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                    <i class="fas fa-eye show-password" onclick="togglePassword(this)"></i>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3 input-group-position">
                    
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required />
                    <i class="fas fa-eye show-password" onclick="togglePassword(this)"></i>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Terms -->
                <div class="terms-section">
                    <div class="form-check mb-2">
                        <input asp-for="AcceptTerms" class="form-check-input" type="checkbox" required />
                        <label asp-for="AcceptTerms" class="form-check-label small">
                            I accept the <a href="@Url.Action("Terms", "Legal")" target="_blank" class="text-primary">Terms of Service</a>
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input asp-for="AcceptPrivacy" class="form-check-input" type="checkbox" required />
                        <label asp-for="AcceptPrivacy" class="form-check-label small">
                            I accept the <a href="@Url.Action("Privacy", "Legal")" target="_blank" class="text-primary">Privacy Policy</a>
                        </label>
                    </div>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-create w-100">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </button>
            </form>

            <div class="text-center mt-4">
                <p class="small">Already have an account? <a href="/Account/Login" class="text-primary fw-bold">Sign In</a></p>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(element) {
            const input = element.previousElementSibling;
            if (input.type === "password") {
                input.type = "text";
                element.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                element.classList.replace("fa-eye-slash", "fa-eye");
            }
        }
    </script>
