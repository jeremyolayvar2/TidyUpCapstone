@model TidyUpCapstone.Models.DTOs.Authentication.ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/ResetPassword.css" />
}

<div class="reset-password-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="reset-password-card">
        <div class="card-body p-5">

            <!-- Header Section -->
            <div class="text-center mb-4">
                <h1 class="reset-password-header">Reset Your Password</h1>
                <p class="text-muted small mb-0">
                    Enter a strong new password to secure your account
                </p>
            </div>

            <!-- Form -->
            <form asp-action="ResetPassword" method="post" autocomplete="off" id="resetPasswordForm">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>

                <!-- Hidden fields -->
                <input asp-for="Token" type="hidden" />
                <input asp-for="Email" type="hidden" />

                <!-- Email Display Field -->
                <div class="mb-4">
                    <div class="flex flex-col">
                        <input type="email"
                               class="login-form-control bg-light"
                               value="@Model.Email"
                               readonly
                               placeholder=" " />
                        <label class="login-form-label">Email Address</label>
                    </div>
                </div>

                <!-- New Password Field -->
                <div class="mb-4">
                    <div class="flex flex-col">
                        <div class="password-input-wrapper">
                            <input asp-for="Password"
                                   type="password"
                                   class="login-form-control"
                                   placeholder=" "
                                   required
                                   aria-label="New Password"
                                   autocomplete="new-password" />
                            <button class="password-toggle-btn" type="button" id="togglePassword">
                                <i class="fas fa-eye password-eye-icon"></i>
                            </button>
                            <label asp-for="Password" class="login-form-label">New Password</label>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                    <div class="password-hint">
                        <small class="text-muted">Minimum 8 characters, including letters and numbers</small>
                    </div>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-4">
                    <div class="flex flex-col">
                        <div class="password-input-wrapper">
                            <input asp-for="ConfirmPassword"
                                   type="password"
                                   class="login-form-control"
                                   placeholder=" "
                                   required
                                   aria-label="Confirm Password"
                                   autocomplete="new-password" />
                            <button class="password-toggle-btn" type="button" id="toggleConfirmPassword">
                                <i class="fas fa-eye password-eye-icon"></i>
                            </button>
                            <label asp-for="ConfirmPassword" class="login-form-label">Confirm Password</label>
                        </div>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mb-3">
                    <button type="submit" class="btn-reset-password" id="resetPasswordBtn">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        Reset Password
                    </button>
                </div>
            </form>

            <!-- Info Section -->
            <div class="alert alert-info-custom text-center mb-4">
                <small>
                    <i class="info-icon">🔒</i>
                    Your new password will be securely encrypted
                </small>
            </div>

            <!-- Navigation Section -->
            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-link">
                    Back to Login
                </a>
            </div>

            <!-- Additional Help -->
            <div class="mt-4 pt-3 border-top text-center small text-muted">
                This reset link is valid for one use only
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.getElementById('resetPasswordForm').addEventListener('submit', function () {
            const btn = document.getElementById('resetPasswordBtn');
            btn.disabled = true;
            btn.querySelector('.spinner-border').classList.remove('d-none');
        });

        // Password visibility toggle
        const toggleVisibility = (btnId, inputSelector) => {
            const btn = document.getElementById(btnId);
            btn.addEventListener('click', function () {
                const field = document.querySelector(inputSelector);
                const icon = this.querySelector('.password-eye-icon');
                if (field.type === 'password') {
                    field.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    field.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        };

        toggleVisibility('togglePassword', 'input[name="Password"]');
        toggleVisibility('toggleConfirmPassword', 'input[name="ConfirmPassword"]');
    </script>
}