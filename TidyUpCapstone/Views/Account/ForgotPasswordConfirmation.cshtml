@{
    ViewData["Title"] = "Check Your Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}
@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="verify-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="verify-card card shadow-lg border-0 rounded-4">
        <div class="card-body p-5 text-center animate__animated animate__fadeInUp">

            <!-- Icon -->
            <div class="mb-4">
                <i class="fas fa-envelope-open-text text-primary" style="font-size: 4.5rem;"></i>
            </div>

            <!-- Heading -->
            <h1 class="h2 fw-bold mb-3">Check Your Email</h1>

            <!-- Main Message -->
            <p class="text-muted fs-5 mb-2">
                If an account with that email exists, we’ve sent you a password reset link.
            </p>
            <p class="text-muted small mb-4">
                The link will expire in <span class="fw-semibold text-dark">24 hours</span> for security reasons.
            </p>

            <!-- Instructions -->
            <div class="alert alert-light border rounded-3 text-start px-4 py-3 mb-4">
                <h6 class="fw-bold mb-3">
                    <i class="fas fa-info-circle text-info me-2"></i>
                    What’s Next?
                </h6>
                <ul class="list-unstyled small text-muted mb-0">
                    <li class="mb-2">✅ Check your inbox (and spam folder)</li>
                    <li class="mb-2">✅ Click <span class="fw-semibold">“Reset Password”</span> in the email</li>
                    <li class="mb-2">✅ Set your new password</li>
                    <li>✅ Log in using your new password</li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-3 mb-4">
                <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-outline-primary btn-lg fw-semibold">
                    <i class="fas fa-redo me-2"></i> Try a Different Email
                </a>
                <a href="@Url.Action("Login", "Account")" class="btn btn-link text-decoration-none">
                    Back to Login
                </a>
            </div>

            <!-- Footer Help -->
            <div class="border-top pt-3 small text-muted">
                <p class="mb-2">
                    <i class="fas fa-clock me-1"></i> Reset link expires in 24 hours
                </p>
                <p class="mb-0">
                    Didn’t receive the email? Check spam or contact
                    <a href="mailto:support@tidyup.com" class="text-primary fw-semibold">support@tidyup.com</a>
                </p>
            </div>
        </div>
    </div>
</div>
