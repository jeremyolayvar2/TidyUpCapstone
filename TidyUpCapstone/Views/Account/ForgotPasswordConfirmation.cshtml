@{
    ViewData["Title"] = "Check Your Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/ForgotPasswordConfirmation.css" />
}

<div class="forgot-password-confirmation-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="forgot-password-confirmation-card">
        <div class="card-body p-5">

            <!-- Header Section -->
            <div class="text-center mb-4">
                <h1 class="forgot-password-confirmation-header">Check Your Email</h1>
                <p class="text-muted small mb-0">
                    If an account with that email exists, we've sent you a password reset link.
                </p>
            </div>

            <!-- Instructions -->
            <div class="instructions-box mb-4">
                <h6 class="instructions-title mb-3">
                    <i class="info-icon"></i>
                    What's Next?
                </h6>
                <ul class="instructions-list">
                    <li>Check your inbox (and spam folder)</li>
                    <li>Click "Reset Password" in the email</li>
                    <li>Set your new password</li>
                    <li>Log in using your new password</li>
                </ul>
            </div>

            <!-- Action Buttons - FIXED -->
            <div class="d-grid gap-3 mb-4">
                <a href="@Url.Action("ForgotPassword", "Account")" class="btn-try-different-email">
                    <i class="redo-icon"></i>
                    Try a Different Email
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-link">
                    Back to Login
                </a>
            </div>

            <!-- Footer Help -->
            <div class="footer-help mt-4 pt-3 border-top text-center small text-muted">
                <p class="mb-2">
                    <i class="clock-icon"></i>
                    Reset link expires in 24 hours
                </p>
                <p class="mb-0">
                    Didn't receive the email? Check spam or contact
                    <a href="mailto:support@tidyup.com" class="text-primary fw-semibold">support@tidyup.com</a>
                </p>
            </div>
        </div>
    </div>
</div>