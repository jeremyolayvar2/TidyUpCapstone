@{
    ViewData["Title"] = "Email Already Verified";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/account.css" />
}

<div class="verification-status-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="status-card card shadow-lg border-0">
        <div class="card-body text-center p-5">

            <!-- Success Icon -->
            <div class="mb-4">
                <i class="fas fa-check-circle text-success" style="font-size: 4rem; animation: pulse 1.5s infinite;"></i>
            </div>

            <!-- Header -->
            <h2 class="h3 fw-bold text-success mb-3">Email Already Verified</h2>

            <!-- Message -->
            <p class="text-muted mb-3">
                Great news! Your email address is already verified and your account is active.
            </p>

            <!-- Info Alert -->
            <div class="alert alert-info border-0 mb-4">
                <i class="fas fa-info-circle me-2"></i>
                You can log in to your account anytime.
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-3 mb-3">
                <a href="@Url.Action("Login", "Account")" class="btn btn-success btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i> Log In to Your Account
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                    <i class="fas fa-home me-2"></i> Go to Homepage
                </a>
            </div>

            <!-- Help -->
            <div class="mt-4 pt-3 border-top">
                <p class="small text-muted mb-0">
                    Forgot your password?
                    <a href="@Url.Action("ForgotPassword", "Account")" class="text-primary fw-semibold">Reset it here</a>
                </p>
            </div>
        </div>
    </div>
</div>

