@{
    ViewData["Title"] = "Email Already Verified";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/EmailAlreadyConfirmed.css" />
}

<div class="email-already-confirmed-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="email-already-confirmed-card">
        <div class="card-body p-5">

            <!-- Header Section -->
            <div class="text-center mb-4">
                <h1 class="email-already-confirmed-header">Email Already Verified</h1>
                <p class="text-muted small mb-0">
                    Great news! Your email address is already verified and your account is active.
                </p>
            </div>

            <!-- Info Alert -->
            <div class="info-alert mb-4">
                <i class="info-alert-icon"></i>
                You can log in to your account anytime.
            </div>

            <!-- Action Buttons - FIXED -->
            <div class="d-grid gap-3 mb-3">
                <a href="@Url.Action("Index", "Home")" class="btn-go-to-login">
                    Go to Login
                </a>
            </div>

            <!-- Help -->
            <div class="help-section mt-4 pt-3 border-top text-center small text-muted">
                <p class="mb-0">
                    Forgot your password?
                    <a href="@Url.Action("ForgotPassword", "Account")" class="text-primary fw-semibold">Reset it here</a>
                </p>
            </div>
        </div>
    </div>
</div>
