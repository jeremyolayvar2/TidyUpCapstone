@model TidyUpCapstone.Models.DTOs.Authentication.ResendVerificationDto
@{
    ViewData["Title"] = "Resend Verification Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/ResendVerification.css?v=@DateTime.Now.Ticks" />
}

<div class="resend-verification-container d-flex align-items-center justify-content-center min-vh-100">
    <div class="resend-verification-card">
        <div class="card-body p-5">

            <!-- Header Section -->
            <div class="text-center mb-4">
                <h1 class="resend-verification-header">Resend Verification Email</h1>
                <p class="text-muted small mb-0">
                    Enter your email address to receive a new verification link
                </p>
            </div>

            <!-- Form -->
            <form asp-action="ResendVerification" method="post" autocomplete="off" id="resendVerificationForm">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="All" class="alert alert-danger d-none" role="alert"></div>

                <!-- Email Field -->
                <div class="mb-4">
                    <div class="flex flex-col">
                        <input asp-for="Email"
                               class="login-form-control"
                               placeholder=" "
                               required
                               aria-label="Email address"
                               autocomplete="email" />
                        <label asp-for="Email" class="login-form-label">Email Address</label>
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mb-3">
                    <button type="submit" class="btn-send-verification" id="sendVerificationBtn">
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        Send Verification Email
                    </button>
                </div>
            </form>

            <!-- Info Section -->
            <div class="alert alert-info-custom text-center mb-4">
                <small>
                    <i class="info-icon"></i>
                    You can request up to 3 verification emails per day
                </small>
            </div>

            <!-- Navigation Section -->
            <div class="text-center mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-link">
                    Back to Login
                </a>
            </div>

            <!-- Additional Help -->
            <div class="mt-4 pt-3 border-top text-center small text-muted">
                Need help? Contact us at
                <a href="mailto:support@tidyup.com" class="text-primary fw-semibold">support@tidyup.com</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.getElementById('resendVerificationForm').addEventListener('submit', function () {
            const btn = document.getElementById('sendVerificationBtn');
            btn.disabled = true;
            btn.querySelector('.spinner-border').classList.remove('d-none');
        });
    </script>
}