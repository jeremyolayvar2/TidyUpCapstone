@{
    ViewBag.HideNavigation = false;
    string currentUserId = "";
    string currentUserName = "";

    if (User.Identity.IsAuthenticated)
    {
        // Real authenticated user
        currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "";
        currentUserName = User.Identity.Name ?? "";
    }
    else
    {
        // Test mode: Get current test user from session
        var currentTestUser = Context.Session.GetString("CurrentTestUser") ?? "Alice";
        currentUserName = currentTestUser;

        // Map test usernames to their IDs (these should match your database)
        if (currentTestUser == "Alice")
        {
            currentUserId = "1";  // Make sure this matches Alice's actual ID in your database
        }
        else if (currentTestUser == "Bob")
        {
            currentUserId = "2";  // Make sure this matches Bob's actual ID in your database
        }
        else if (currentTestUser == "Charlie")
        {
            currentUserId = "3";  // Make sure this matches Charlie's actual ID in your database
        }
    }
}

<script>
    window.currentUserId = '@currentUserId';
    window.currentUserName = '@currentUserName';

    function getCurrentUserId() {
        return window.currentUserId || document.body.dataset.userid || null;
    }

    function getCurrentUserName() {
        return window.currentUserName || document.body.dataset.username || "Anonymous";
    }
</script>

