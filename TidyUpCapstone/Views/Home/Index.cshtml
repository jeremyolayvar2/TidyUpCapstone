@model ErrorViewModel

@{
    ViewBag.HideNavigation = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/home-index.css" asp-append-version="true" />
}

<div class="main-container">
    <div class="container1">
        <div class="title">Tidy<br />Up</div>

        <div class="block reuse">Reuse</div>
        <div class="block mindful">Mindful</div>
        <div class="block empty1"></div>
        <div class="block unload">Unload</div>
        <div class="block letgo">Let go</div>
        <div class="block clearout">Clear out</div>
        <div class="block organize">Organize</div>
        <div class="block empty2"></div>
        <div class="block empty3"></div>
        <div class="block empty5"></div>

    </div>

    <div class="container2">
        <div class="form-wrapper">
            <!-- Updated Welcome Section -->
            <div class="welcome-section active">
                <div class="welcome-header">
                    <h2>Welcome to TidyUp</h2>
                    <p class="welcome-subtitle">Declutter your space, organize your life</p>
                    <p class="welcome-description">
                        Transform your unused items into opportunities.
                        Join our community and start your decluttering journey today.
                    </p>
                </div>

                <!-- Call to Action Buttons -->
                <div class="cta-buttons">
                    <div class="input-box">
                        <a href="/Account/Register" class="btn-primary get-started">
                            <i class="fas fa-rocket"></i>
                            Get Started
                        </a>
                    </div>
                    <div class="input-box">
                        <a href="/Account/Login" class="btn-secondary sign-in">
                            <i class="fas fa-sign-in-alt"></i>
                            Sign In
                        </a>
                    </div>
                </div>

                <!-- Social Login Preview -->
                <div class="login-preview">
                    <p class="login-preview-text">Quick sign in with:</p>
                    <div class="social-icons">
                        <!-- Google OAuth Form -->
                        <form asp-action="ExternalLogin" asp-controller="Account" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="provider" value="Google" />
                            <input type="hidden" name="returnUrl" value="@Url.Action("Main", "Home")" />
                            <button type="submit" class="social-icon google">
                                <i class="fab fa-google"></i>
                                <span>Google</span>
                            </button>
                        </form>

                        <!-- Facebook (placeholder for future) -->
                        <div class="social-icon facebook disabled">
                            <i class="fab fa-facebook-f"></i>
                            <span>Facebook</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>