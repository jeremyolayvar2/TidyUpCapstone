@{
    ViewData["Title"] = "Message";
    ViewData["PageType"] = "message";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Righteous&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/MessagePage.css" asp-append-version="true" />

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.add('message-page');
    });
</script>


<div class="flex h-[calc(100vh-4rem)] font-['Montserrat']">
    <!-- Sidebar -->
    <div class="w-1/3 max-w-sm bg-[#F5F5F5] border-r border-gray-300 flex flex-col">
        <div class="flex justify-center m-2 pb-2">
            <img class="w-[50px] h-[50px]" src="~/assets/logo-tidyup.png" alt="Alternate Text" />
        </div>

        <div class="px-4 pb-2">
            <input type="text" placeholder="Search..." class="w-full px-4 py-2 border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-[#6B9080]" />
        </div>

        <!-- Conversations List -->
        <div class="overflow-y-auto">
            @for (int i = 0; i < 5; i++)
            {
                <div class="flex items-center px-4 py-3 hover:bg-gray-200 cursor-pointer transition">
                    <div class="w-14 h-14 bg-gray-300 rounded-full mr-4"></div>
                    <div class="text-lg font-medium">Item Owner</div>
                </div>
            }
        </div>
    </div>

    <!-- Chat Section -->
    <div class="flex-1 bg-[#6B9080] text-white flex flex-col relative">
        <!-- Header -->
        <div class="flex items-center gap-4 p-6">
            <div class="w-16 h-16 rounded-full bg-gray-300"></div>
            <div class="text-lg font-semibold">Item Owner</div>
            <div class="ml-auto flex gap-2">
                <button class="bg-white text-[#6B9080] px-4 py-2 rounded-tl-md rounded-bl-md">via Meet-up</button>
                <button class="bg-white text-[#6B9080] px-4 py-2 rounded-tr-md rounded-br-md">via Delivery</button>
            </div>
            <button class="ml-4 text-white">
                <i class='bx bx-info-circle text-xl'></i>
            </button>
        </div>

        <!-- Chat Messages -->
        <div class="flex-1 px-6 py-4 space-y-4 overflow-y-auto">
            <div class="bg-white text-black rounded-full px-6 py-3 max-w-lg">Hi! 👋 I saw you’re interested in the Bookshelf I posted. It’s still available!</div>

            <div class="flex justify-end">
                <div class="bg-white text-black rounded-full px-6 py-3 max-w-lg">Hello! Yes, I’d love to claim it.</div>
            </div>

            <div class="flex justify-end">
                <div class="bg-white text-black rounded-full px-6 py-3 max-w-lg">Okay, I have enough tokens. Can we meet this Saturday afternoon around 3PM at SM Sta. Mesa?</div>
            </div>

            <div class="bg-white text-black rounded-full px-6 py-3 max-w-lg">Sure! Saturday at 3PM works for me. Let’s meet at the main entrance near Starbucks.</div>
        </div>

        <!-- Message Input -->
        <div class="p-4">
            <input type="text" placeholder="Message..." class="w-full px-6 py-3 rounded-md text-black focus:outline-none" />
        </div>
    </div>
</div>

<script src="~/js/MessagePage.js"></script>