@model TidyUpCapstone.Models.ViewModels.Gamification.GamificationDashboardViewModel
@using TidyUpCapstone.Models.Entities.Gamification

@{
    ViewData["Title"] = "Streaks Dashboard";
    ViewData["PageType"] = "streaks";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Righteous&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/AllStreaks.css" asp-append-version="true" />

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.add('streaks-page');
    });
</script>

<div class="min-h-screen bg-gradient-to-br from-[#344e41] via-[#588157] to-[#a3b18a] font-['Montserrat']">
    <!-- Back Button - Moved to right side -->
    <div class="fixed top-4 right-4 z-50">
        <a href="/Home/QuestPage" class="inline-flex items-center gap-2 glass-button rounded-full px-6 py-3 text-white font-semibold hover:scale-105 transition-all duration-300">
            <span>Back to Quests</span>
            <i class='bx bx-arrow-back text-lg rotate-180'></i>
        </a>
    </div>

    <!-- Header Section -->
    <div class="container mx-auto px-4 pt-20 pb-12">
        <div class="text-center mb-12">
            <h1 class="font-['Righteous'] text-5xl md:text-7xl lg:text-8xl text-white mb-4 transform -rotate-1 drop-shadow-lg">
                STREAKS DASHBOARD
            </h1>
            <p class="text-white/90 text-xl md:text-2xl mb-6 max-w-3xl mx-auto">
                Build consistency, maintain momentum, and earn milestone rewards through daily habits
            </p>

            <!-- Progress Stats -->
            <div class="inline-flex items-center glass-card rounded-2xl px-8 py-4">
                <div class="flex items-center gap-4">
                    <div class="flex items-center gap-2">
                        <i class='bx bx-trending-up text-green-300 text-2xl'></i>
                        <span class="text-white font-bold text-lg">
                            @Model.Stats.ActiveStreaksCount
                        </span>
                        <span class="text-white/80">Active Streaks</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Streaks Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-8 mb-12">
            @if (Model.ActiveStreaks.Any())
            {
                @foreach (var streak in Model.ActiveStreaks.OrderByDescending(s => s.IsActive).ThenByDescending(s => s.CurrentStreak))
                {
                    <div class="streak-card group relative glass-card rounded-3xl p-8 hover:scale-105 hover:-translate-y-4 hover:rotate-1 transition-all duration-500 overflow-hidden border-2 @(streak.IsActive ? "border-emerald-400" : "border-gray-400/50")">

                        <!-- Background Pattern -->
                        <div class="absolute inset-0 opacity-10">
                            <div class="absolute top-4 right-4 w-24 h-24 rounded-full bg-white/20 transform rotate-12"></div>
                            <div class="absolute bottom-8 left-8 w-16 h-16 rounded-full bg-white/10 transform -rotate-12"></div>
                        </div>

                        <!-- Status Badge -->
                        <div class="relative flex items-center justify-between mb-6">
                            <div class="flex items-center gap-3">
                                <div class="w-3 h-3 rounded-full @(streak.IsActive ? "bg-green-300 animate-pulse" : "bg-gray-400")"></div>
                                <span class="text-sm font-semibold px-3 py-1 rounded-full glass-button @(streak.IsActive ? "text-white border border-green-400/30" : "text-white/70 border border-gray-400/30")">
                                    @(streak.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                            <div class="text-right">
                                <i class='bx @(streak.IsActive ? "bx-trending-up text-green-200" : "bx-time text-gray-400") text-2xl'></i>
                            </div>
                        </div>

                        <!-- Streak Name -->
                        <div class="relative mb-4">
                            <h3 class="font-['Righteous'] text-2xl lg:text-3xl mb-2 text-white group-hover:scale-105 transition-transform duration-300">
                                @streak.StreakName
                            </h3>
                            <p class="text-sm text-white/80 leading-relaxed">
                                @streak.Description
                            </p>
                        </div>

                        <!-- Streak Numbers -->
                        <div class="relative grid grid-cols-2 gap-4 mb-6">
                            <div class="text-center p-4 rounded-2xl glass-card border border-white/20 group-hover:scale-105 transition-transform duration-300">
                                <div class="text-4xl font-bold mb-1 text-white">
                                    @streak.CurrentStreak
                                </div>
                                <div class="text-sm font-semibold text-white/70">
                                    Current Streak
                                </div>
                            </div>
                            <div class="text-center p-4 rounded-2xl glass-card border border-white/20 group-hover:scale-105 transition-transform duration-300">
                                <div class="text-4xl font-bold mb-1 text-white">
                                    @streak.LongestStreak
                                </div>
                                <div class="text-sm font-semibold text-white/70">
                                    Personal Best
                                </div>
                            </div>
                        </div>

                        <!-- Next Milestone -->
                        @if (streak.IsActive && streak.NextMilestone > streak.CurrentStreak)
                        {
                            <div class="relative glass-card rounded-2xl p-4 mb-4 border border-white/20">
                                <div class="flex items-center justify-between mb-2">
                                    <div class="flex items-center gap-2">
                                        <i class='bx bx-target-lock text-yellow-300 text-lg'></i>
                                        <span class="font-semibold text-sm text-white">Next Milestone</span>
                                    </div>
                                    <span class="text-xs text-white/70 font-medium">
                                        @streak.NextMilestone @streak.StreakUnit.ToLower()
                                    </span>
                                </div>
                                <div class="text-sm text-white/80 mb-2">
                                    @streak.DaysUntilMilestone more @streak.StreakUnit.ToLower() to reach milestone
                                </div>
                                @if (streak.MilestoneReward > 0)
                                {
                                    <div class="flex items-center gap-2">
                                        <i class='bx bx-gift text-yellow-300'></i>
                                        <span class="text-sm font-semibold text-yellow-200">
                                            Reward: @streak.MilestoneReward Tokens
                                        </span>
                                    </div>
                                }
                            </div>
                        }

                        <!-- Last Activity -->
                        @if (streak.LastActivityDate.HasValue)
                        {
                            <div class="relative text-center text-xs text-white/60 mt-4">
                                <i class='bx bx-time mr-1'></i>
                                Last activity: @streak.LastActivityDate?.ToString("MMM dd, yyyy 'at' h:mm tt")
                            </div>
                        }

                        <!-- Floating Elements -->
                        @if (streak.IsActive)
                        {
                            <div class="absolute top-6 right-6 w-2 h-2 bg-yellow-300 rounded-full animate-ping"></div>
                            <div class="absolute top-6 right-6 w-2 h-2 bg-yellow-300 rounded-full"></div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="col-span-full">
                    <div class="text-center glass-card rounded-3xl p-12 border-2 border-gray-400/30">
                        <div class="w-24 h-24 glass-card rounded-full flex items-center justify-center mx-auto mb-6 border border-gray-400/30">
                            <i class='bx bx-time text-4xl text-gray-400'></i>
                        </div>
                        <h2 class="font-['Righteous'] text-3xl text-white mb-4">No Active Streaks</h2>
                        <p class="text-white/70 mb-8 max-w-md mx-auto">Start building your consistency! Check in daily and complete quests to build streaks.</p>
                        <button class="glass-button border-2 border-[#588157] text-white font-semibold px-8 py-3 rounded-2xl hover:scale-105 transition-all duration-300" onclick="window.location.href='/Home/QuestPage'">
                            <i class='bx bx-rocket mr-2'></i>
                            Start Your Journey
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- Streak Tips Section -->
        <div class="glass-card rounded-3xl p-8 lg:p-12 border border-white/20">
            <h3 class="font-['Righteous'] text-3xl lg:text-4xl text-white text-center mb-12">
                Streak Building Tips
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="text-center text-white group">
                    <div class="w-20 h-20 glass-card rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 border border-blue-400/30">
                        <i class='bx bx-calendar-check text-4xl text-blue-300'></i>
                    </div>
                    <h4 class="font-['Righteous'] text-xl mb-4">Daily Check-ins</h4>
                    <p class="text-white/80 leading-relaxed">
                        Visit daily to maintain your check-in streak and build consistent habits that lead to long-term success
                    </p>
                </div>
                <div class="text-center text-white group">
                    <div class="w-20 h-20 glass-card rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 border border-green-400/30">
                        <i class='bx bx-home text-4xl text-green-300'></i>
                    </div>
                    <h4 class="font-['Righteous'] text-xl mb-4">Declutter Regularly</h4>
                    <p class="text-white/80 leading-relaxed">
                        List items consistently to build decluttering habits and maintain momentum in your tidying journey
                    </p>
                </div>
                <div class="text-center text-white group">
                    <div class="w-20 h-20 glass-card rounded-3xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 border border-purple-400/30">
                        <i class='bx bx-group text-4xl text-purple-300'></i>
                    </div>
                    <h4 class="font-['Righteous'] text-xl mb-4">Community Engagement</h4>
                    <p class="text-white/80 leading-relaxed">
                        Participate in discussions and help others to maintain community streaks and build connections
                    </p>
                </div>
            </div>

            <!-- Streak Benefits -->
            <div class="mt-12 pt-8 border-t border-white/20">
                <h4 class="font-['Righteous'] text-2xl text-white text-center mb-8">Why Build Streaks?</h4>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                    <div class="text-center">
                        <div class="w-12 h-12 glass-card rounded-2xl flex items-center justify-center mx-auto mb-3 border border-yellow-400/30">
                            <i class='bx bx-trophy text-2xl text-yellow-300'></i>
                        </div>
                        <div class="text-white font-semibold text-sm">Earn Milestone Rewards</div>
                    </div>
                    <div class="text-center">
                        <div class="w-12 h-12 glass-card rounded-2xl flex items-center justify-center mx-auto mb-3 border border-blue-400/30">
                            <i class='bx bx-trending-up text-2xl text-blue-300'></i>
                        </div>
                        <div class="text-white font-semibold text-sm">Build Lasting Habits</div>
                    </div>
                    <div class="text-center">
                        <div class="w-12 h-12 glass-card rounded-2xl flex items-center justify-center mx-auto mb-3 border border-green-400/30">
                            <i class='bx bx-bar-chart-alt-2 text-2xl text-green-300'></i>
                        </div>
                        <div class="text-white font-semibold text-sm">Track Progress</div>
                    </div>
                    <div class="text-center">
                        <div class="w-12 h-12 glass-card rounded-2xl flex items-center justify-center mx-auto mb-3 border border-purple-400/30">
                            <i class='bx bx-brain text-2xl text-purple-300'></i>
                        </div>
                        <div class="text-white font-semibold text-sm">Stay Motivated</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Staggered animation for streak cards
        $('.streak-card').each(function(index) {
            $(this).css({
                'animation-delay': (index * 0.2) + 's',
                'animation': 'slideInUp 0.8s ease forwards',
                'opacity': '0',
                'transform': 'translateY(30px)'
            });
        });

        // Pulse animation for active streaks
        $('.streak-card:has(.animate-pulse)').find('.text-4xl').addClass('pulse-number');

        // Hover effects for milestone cards
        $('.streak-card').hover(
            function() {
                $(this).find('.group-hover\\:scale-105').addClass('scale-105');
            },
            function() {
                $(this).find('.group-hover\\:scale-105').removeClass('scale-105');
            }
        );

        // Intersection observer for tip cards
        const observerOptions = {
            threshold: 0.3,
            rootMargin: '0px 0px -100px 0px'
        };

        const tipObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'bounceIn 0.6s ease forwards';
                }
            });
        }, observerOptions);

        $('.group').each(function() {
            tipObserver.observe(this);
        });

        // Dynamic number counting animation for streak numbers
        $('.text-4xl').each(function() {
            const $this = $(this);
            const finalNumber = parseInt($this.text());
            if (!isNaN(finalNumber) && finalNumber > 0) {
                $this.text('0');
                $({ counter: 0 }).animate({ counter: finalNumber }, {
                    duration: 1500,
                    delay: parseInt($this.closest('.streak-card').css('animation-delay')) * 1000,
                    easing: 'swing',
                    step: function() {
                        $this.text(Math.ceil(this.counter));
                    },
                    complete: function() {
                        $this.text(finalNumber);
                    }
                });
            }
        });
    });
</script>

<style>
    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }

        50% {
            opacity: 1;
            transform: scale(1.05);
        }

        70% {
            transform: scale(0.95);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    .pulse-number {
        animation: pulseGlow 2s infinite;
    }

    @@keyframes pulseGlow {
        0%, 100% {
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.5);
        }

        50% {
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.8), 0 0 30px rgba(255, 255, 255, 0.6);
        }
    }

    .streak-card {
        animation-fill-mode: both;
    }

    /* Glass Effects */
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.2), inset 0 -1px 0 rgba(0, 0, 0, 0.1);
    }

        .glass-card:hover {
            background: rgba(255, 255, 255, 0.15);
            box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15), inset 0 1px 0 rgba(255, 255, 255, 0.3), inset 0 -1px 0 rgba(0, 0, 0, 0.15);
        }

    .glass-button {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

        .glass-button:hover {
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }

    /* Custom scrollbar */
    .streak-card::-webkit-scrollbar {
        display: none;
    }

    /* Backdrop blur support */
    @@supports not (backdrop-filter: blur(10px)) {
        .glass-card, .glass-button {
            background: rgba(255, 255, 255, 0.25);
        }
    }
</style>