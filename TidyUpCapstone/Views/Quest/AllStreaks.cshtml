@model TidyUpCapstone.Models.ViewModels.Gamification.GamificationDashboardViewModel
@using TidyUpCapstone.Models.Entities.Gamification

@{
    ViewData["Title"] = "Streaks Dashboard";
    ViewData["PageType"] = "streaks";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Righteous&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    body.streaks-page {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        min-height: 100vh;
        font-family: 'Montserrat', sans-serif;
    }

    .streaks-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .streaks-header {
        text-align: center;
        margin-bottom: 40px;
        color: white;
    }

    .streaks-title {
        font-family: 'Righteous', cursive;
        font-size: 3.5em;
        margin-bottom: 10px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .streaks-subtitle {
        font-size: 1.2em;
        margin-bottom: 20px;
        opacity: 0.9;
    }

    .streaks-stats {
        background: rgba(255,255,255,0.2);
        border-radius: 25px;
        padding: 15px 30px;
        display: inline-block;
        backdrop-filter: blur(10px);
    }

    .streaks-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        margin-bottom: 40px;
    }

    .streak-card {
        background: rgba(255,255,255,0.95);
        border-radius: 25px;
        padding: 30px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .streak-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 45px rgba(0,0,0,0.25);
        }

        .streak-card.active {
            background: linear-gradient(135deg, #11998e, #38ef7d);
            color: white;
        }

        .streak-card.inactive {
            background: rgba(255,255,255,0.6);
            color: #888;
        }

    .streak-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .streak-name {
        font-family: 'Righteous', cursive;
        font-size: 1.6em;
        margin: 0;
    }

    .streak-status {
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.8em;
        font-weight: 600;
    }

    .status-active {
        background: rgba(76, 175, 80, 0.2);
        color: #2E7D32;
        border: 2px solid rgba(76, 175, 80, 0.3);
    }

    .status-inactive {
        background: rgba(158, 158, 158, 0.2);
        color: #666;
        border: 2px solid rgba(158, 158, 158, 0.3);
    }

    .streak-description {
        font-size: 1em;
        margin-bottom: 25px;
        line-height: 1.5;
        opacity: 0.9;
    }

    .streak-numbers {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 25px;
    }

    .streak-stat {
        text-align: center;
        padding: 15px;
        background: rgba(0,0,0,0.1);
        border-radius: 15px;
    }

    .streak-card.active .streak-stat {
        background: rgba(255,255,255,0.2);
    }

    .stat-number {
        font-size: 2.5em;
        font-weight: 700;
        display: block;
        margin-bottom: 5px;
    }

    .stat-label {
        font-size: 0.9em;
        opacity: 0.8;
        font-weight: 600;
    }

    .milestone-info {
        background: rgba(255, 193, 7, 0.2);
        border: 2px solid rgba(255, 193, 7, 0.3);
        border-radius: 15px;
        padding: 15px;
        text-align: center;
    }

    .streak-card.active .milestone-info {
        background: rgba(255,255,255,0.2);
        border-color: rgba(255,255,255,0.3);
    }

    .milestone-title {
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 1.1em;
    }

    .milestone-progress {
        font-size: 0.95em;
        opacity: 0.9;
    }

    .reward-preview {
        margin-top: 8px;
        font-weight: 600;
        color: #FF9800;
    }

    .streak-card.active .reward-preview {
        color: #FFD54F;
    }

    .last-activity {
        text-align: center;
        margin-top: 15px;
        font-size: 0.85em;
        opacity: 0.7;
    }

    .back-button {
        position: fixed;
        top: 20px;
        left: 20px;
        background: rgba(255,255,255,0.2);
        border: 2px solid rgba(255,255,255,0.3);
        border-radius: 50px;
        padding: 12px 20px;
        color: white;
        text-decoration: none;
        font-weight: 600;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
        z-index: 1000;
    }

        .back-button:hover {
            background: rgba(255,255,255,0.3);
            transform: translateX(-3px);
            color: white;
            text-decoration: none;
        }

    .no-streaks-card {
        grid-column: 1 / -1;
        text-align: center;
        background: rgba(255,255,255,0.9);
        border-radius: 25px;
        padding: 50px;
        color: #666;
    }

    .no-streaks-title {
        font-family: 'Righteous', cursive;
        font-size: 2em;
        margin-bottom: 15px;
        color: #555;
    }

    .start-streak-btn {
        background: linear-gradient(135deg, #11998e, #38ef7d);
        color: white;
        border: none;
        padding: 15px 30px;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 20px;
    }

        .start-streak-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.add('streaks-page');
    });
</script>

<a href="/Home/QuestPage" class="back-button">← Back to Quests</a>

<div class="streaks-container">
    <div class="streaks-header">
        <h1 class="streaks-title">STREAKS DASHBOARD</h1>
        <p class="streaks-subtitle">Build consistency and earn milestone rewards</p>
        <div class="streaks-stats">
            <span class="progress-text">@Model.Stats.ActiveStreaksCount Active Streaks</span>
        </div>
    </div>

    <div class="streaks-grid">
        @if (Model.ActiveStreaks.Any())
        {
            @foreach (var streak in Model.ActiveStreaks.OrderByDescending(s => s.IsActive).ThenByDescending(s => s.CurrentStreak))
            {
                <div class="streak-card @(streak.IsActive ? "active" : "inactive")">
                    <div class="streak-header">
                        <h3 class="streak-name">@streak.StreakName</h3>
                        <span class="streak-status @(streak.IsActive ? "status-active" : "status-inactive")">
                            @(streak.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>

                    <p class="streak-description">@streak.Description</p>

                    <div class="streak-numbers">
                        <div class="streak-stat">
                            <span class="stat-number">@streak.CurrentStreak</span>
                            <span class="stat-label">Current Streak</span>
                        </div>
                        <div class="streak-stat">
                            <span class="stat-number">@streak.LongestStreak</span>
                            <span class="stat-label">Personal Best</span>
                        </div>
                    </div>

                    @if (streak.IsActive && streak.NextMilestone > streak.CurrentStreak)
                    {
                        <div class="milestone-info">
                            <div class="milestone-title">Next Milestone</div>
                            <div class="milestone-progress">
                                @streak.DaysUntilMilestone more @streak.StreakUnit.ToLower() to reach @streak.NextMilestone @streak.StreakUnit.ToLower()
                            </div>
                            @if (streak.MilestoneReward > 0)
                            {
                                <div class="reward-preview">
                                    Reward: @streak.MilestoneReward Tokens
                                </div>
                            }
                        </div>
                    }

                    @if (streak.LastActivityDate.HasValue)
                    {
                        <div class="last-activity">
                            Last activity: @streak.LastActivityDate?.ToString("MMM dd, yyyy 'at' h:mm tt")
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="no-streaks-card">
                <h2 class="no-streaks-title">No Active Streaks</h2>
                <p>Start building your consistency! Check in daily and complete quests to build streaks.</p>
                <button class="start-streak-btn" onclick="window.location.href='/Home/QuestPage'">
                    Start Your Journey
                </button>
            </div>
        }
    </div>

    <!-- Streak Tips Section -->
    <div class="streak-tips" style="background: rgba(255,255,255,0.1); border-radius: 20px; padding: 30px; margin-top: 40px; backdrop-filter: blur(10px);">
        <h3 style="color: white; font-family: 'Righteous', cursive; text-align: center; margin-bottom: 20px;">Streak Building Tips</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; color: white;">
            <div style="text-align: center;">
                <div style="font-size: 2em; margin-bottom: 10px;">📅</div>
                <strong>Daily Check-ins</strong>
                <p style="margin: 8px 0; opacity: 0.9;">Visit daily to maintain your check-in streak</p>
            </div>
            <div style="text-align: center;">
                <div style="font-size: 2em; margin-bottom: 10px;">🏠</div>
                <strong>Declutter Regularly</strong>
                <p style="margin: 8px 0; opacity: 0.9;">List items consistently to build decluttering habits</p>
            </div>
            <div style="text-align: center;">
                <div style="font-size: 2em; margin-bottom: 10px;">👥</div>
                <strong>Community Engagement</strong>
                <p style="margin: 8px 0; opacity: 0.9;">Participate in discussions to maintain community streaks</p>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
        // Add staggered animations
        $('.streak-card').each(function(index) {
            $(this).css({
                'animation': `fadeInUp 0.6s ease ${index * 0.2}s forwards`,
                'opacity': '0'
            });
        });

        // Add pulse animation to active streaks
        $('.streak-card.active .stat-number').css({
            'animation': 'pulse 2s infinite'
        });
    });
</script>

<style>
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        100% {
            transform: scale(1);
        }
    }

    .streak-card {
        opacity: 0;
    }
</style>